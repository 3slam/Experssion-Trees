@model PassengerViewModel

<form method="post" asp-action="filter" class="mb-4">
    <div class="row">
        <!-- Survived dropdown -->
        <div class="col-md-2">
            <label for="Survived" class="form-label">Survived</label>
            <select asp-for="Filter.Survived" class="form-control">
                <option value="">-- Select --</option>
                <option value="True">Yes</option>
                <option value="False">No</option>
            </select>
        </div>

        <!-- Passenger Class dropdown -->
        <div class="col-md-2">
            <label for="PClass" class="form-label">Passenger Class</label>
            <select asp-for="Filter.PClass" class="form-control">
                <option value="">-- Select Class --</option>
                <option value="1">1st Class</option>
                <option value="2">2nd Class</option>
                <option value="3">3rd Class</option>
            </select>
        </div>

        <!-- Sex dropdown -->
        <div class="col-md-2">
            <label for="Sex" class="form-label">Sex</label>
            <select asp-for="Filter.Sex" class="form-control">
                <option value="">-- Select Sex --</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>

        <!-- Age input (leave as text) -->
        <div class="col-md-2">
            <label for="Age" class="form-label">Age</label>
            <input asp-for="Filter.Age" class="form-control" />
        </div>

        <!-- Filter button -->
        <div class="col-md-2 d-flex align-items-end">
            <button type="submit" class="btn btn-primary w-100">Filter</button>
        </div>
    </div>
</form>


<!-- Passenger data table -->
<table class="table table-striped table-bordered">
    <thead class="table-dark">
        <tr>
            <th>Id</th>
            <th>Survived</th>
            <th>Passenger Class</th>
            <th>Name</th>
            <th>Sex</th>
            <th>Age</th>
            <th>Siblings/Spouse</th>
            <th>Parent/Children</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var passenger in Model.Passengers)
        {
            <tr>
                <td>@passenger.Id</td>
                <td>@(passenger.Survived ? "Yes" : "No")</td>
                <td>@passenger.PassengerClass</td>
                <td>@passenger.Name</td>
                <td>@passenger.Sex</td>
                <td>@passenger.Age</td>
                <td>@passenger.SiblingsOrSpouse</td>
                <td>@passenger.ParentOrChildren</td>
            </tr>
        }
    </tbody>
</table>
